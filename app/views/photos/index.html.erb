<% @photos.each do |photo| %>

    <div class="card photo-form ">
      <div class="card-header ">

        <%= image_tag photo.image.url, size: '300x300' %><br>
        <strong><%= photo.description %></strong><br>
        <%= photo.user.email if photo.user %><br>

          <%= link_to 'Показать', photo %>

        <% if photo.user == current_user %>
        |  <%= link_to 'Изменить', edit_photo_path(photo) %> |
          <%= link_to 'Удалить', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </div>
      </div>
    <% end %>

<br>

<% if user_signed_in? %>
<br><%= link_to 'Новая фотография', new_photo_path, class:"btn btn-primary" %>
<% end %>
</div>
